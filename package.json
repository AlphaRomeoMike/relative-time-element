{
  "name": "@github/time-elements",
  "version": "3.1.2",
  "main": "dist/bundle.js",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist",
    "custom-elements.json"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.ts && tsc --noEmit",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "npm run clean && npm run lint && mkdir dist",
    "bundle": "esbuild --bundle dist/index.js --keep-names --outfile=dist/bundle.js --format=esm",
    "build": "tsc && npm run bundle && npm run manifest",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "test": "web-test-runner",
    "postpublish": "npm publish --ignore-scripts --@github:registry='https://npm.pkg.github.com'",
    "manifest": "custom-elements-manifest analyze"
  },
  "prettier": "@github/prettier-config",
  "repository": "github/time-elements",
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.6.4",
    "@github/prettier-config": "0.0.4",
    "@open-wc/testing": "^3.1.6",
    "@web/dev-server-esbuild": "^0.3.2",
    "@web/test-runner": "^0.14.0",
    "@web/test-runner-playwright": "^0.8.10",
    "esbuild": "^0.15.11",
    "eslint": "^8.22.0",
    "eslint-plugin-github": "^4.3.7",
    "typescript": "^4.7.4"
  },
  "eslintIgnore": [
    "dist/"
  ],
  "customElements": "custom-elements.json"
}
